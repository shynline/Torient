<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/priorityLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:lines="1"
        android:text="Priority"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/downloadLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:text="Download"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/priorityLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/progressLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:text="Progress"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/downloadLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sizeLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:text="Size"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/progressLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="start"
        android:lines="1"
        android:text="Name"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toStartOf="@id/sizeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>